<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="64dp" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/dvUserSearchAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="16dp"
        fresco:placeholderImage="@drawable/gray_oval"
        fresco:roundAsCircle="true"/>

    <RelativeLayout
        android:id="@+id/rlUserSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dvUserSearchAvatar"
        android:layout_alignTop="@+id/dvUserSearchAvatar">

        <TextView
            style="@style/GrayFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/tvUserSearchName" />

        <TextView
            style="@style/GrayFont.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserSearchIntro"
            android:layout_below="@+id/tvUserSearchName" />

    </RelativeLayout>

    <View
        android:id="@+id/ddUserSearch"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray_separator_line"/>

</RelativeLayout>